<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?attr/colorPrimaryLight</item>
        <item name="android:textColorPrimary">?attr/colorPrimaryLight</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimaryLight</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyle.Black">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextStyle.Black.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Gray">
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="TextStyle.Gray.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Search.Toolbar.Theme.left" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="Search.Toolbar.Theme.Text" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#66262626</item>
    </style>

    <style name="TabLayout.Theme" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorPrimaryLight</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">?attr/colorPrimaryLight</item>
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
    </style>

    <style name="Dialog.Style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Full.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
